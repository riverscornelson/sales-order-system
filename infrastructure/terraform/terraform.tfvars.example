# Example Terraform variables file
# Copy this file to terraform.tfvars and fill in your actual values

project_id = "your-gcp-project-id"
region     = "us-central1"
zone       = "us-central1-a"

environment = "production"

# Database configuration
db_tier     = "db-f1-micro"  # Use db-custom-1-3840 for production
db_password = "your-secure-database-password"

# Monitoring
alert_email = "admin@yourdomain.com"

# Container images (will be updated by CI/CD)
backend_image  = "gcr.io/your-gcp-project-id/sales-order-backend:latest"
frontend_image = "gcr.io/your-gcp-project-id/sales-order-frontend:latest"

# Resource allocation - adjust based on expected load
backend_cpu           = "2"
backend_memory        = "4Gi"
backend_min_instances = 1
backend_max_instances = 20

frontend_cpu           = "1"
frontend_memory        = "2Gi"
frontend_min_instances = 1
frontend_max_instances = 10