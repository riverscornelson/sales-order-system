# Local Development Environment
ENVIRONMENT=development
DEBUG=true

# OpenAI API Key (REQUIRED - get from https://platform.openai.com/)
OPENAI_API_KEY=your-api-key-here

# Local SQLite database for development
DATABASE_URL=sqlite:///./sales_orders.db

# Google Cloud Project (optional for local dev)
GOOGLE_CLOUD_PROJECT=your-project-id

# Storage buckets (will use local storage in dev mode)
UPLOADS_BUCKET=local-uploads
VECTORS_BUCKET=local-vectors
GCS_PARTS_CATALOG_BUCKET=local-parts-catalog

# Mock ERP settings
USE_MOCK_ERP=true